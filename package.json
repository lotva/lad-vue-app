{
    "name": "lad-vue-app",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "postinstall": "npx simple-git-hooks",
        "dev": "vite",
        "build": "run-p type-check \"build-only {@}\" --",
        "preview": "vite preview",
        "test:unit": "vitest",
        "test:e2e": "playwright test",
        "build-only": "vite build",
        "type-check": "vue-tsc --build --force",
        "prettier": "prettier . --check",
        "stylelint": "stylelint \"src/**/*.{vue,css}\"",
        "eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
        "lint": "npm run prettier && npm run stylelint && npm run eslint",
        "format": "prettier . --write && stylelint \"src/**/*.{vue,css}\" --fix && eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
    },
    "nano-staged": {
        "*.{vue,js,ts,css,json,yaml,md}": "prettier --write",
        "*.{vue,css}": "stylelint --fix",
        "*.{vue,js}": "eslint --fix"
    },
    "simple-git-hooks": {
        "pre-commit": "./node_modules/.bin/nano-staged"
    },
    "dependencies": {
        "pinia": "^2.1.7",
        "vue": "^3.4.29",
        "vue-router": "^4.3.3"
    },
    "devDependencies": {
        "@playwright/test": "^1.44.1",
        "@rushstack/eslint-patch": "^1.8.0",
        "@tsconfig/node20": "^20.1.4",
        "@types/browserslist": "^4.15.0",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^20.14.5",
        "@vitejs/plugin-vue": "^5.0.5",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.5.1",
        "axios": "^1.7.3",
        "browserslist": "^4.23.3",
        "eslint": "^8.57.0",
        "eslint-plugin-playwright": "^1.6.2",
        "eslint-plugin-vue": "^9.23.0",
        "jsdom": "^24.1.0",
        "lightningcss": "^1.26.0",
        "nano-staged": "^0.8.0",
        "npm-run-all2": "^6.2.0",
        "postcss-html": "^1.7.0",
        "prettier": "^3.2.5",
        "simple-git-hooks": "^2.11.1",
        "stylelint": "^16.8.1",
        "stylelint-config-clean-order": "^6.1.0",
        "stylelint-config-html": "^1.1.0",
        "stylelint-plugin-logical-css": "^1.2.1",
        "typescript": "~5.4.0",
        "vite": "^5.3.1",
        "vite-plugin-vue-devtools": "^7.3.1",
        "vitest": "^1.6.0",
        "vue-tsc": "^2.0.21"
    }
}
